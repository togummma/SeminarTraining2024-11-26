/* HUD全体のスタイル */
.hud-container {
    flex-direction: column; /* 垂直に並べる */
    align-items: center;    /* 中央揃え */
    padding: 10px;
    width: 300px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 15px;
}

/* ラベルのスタイル */
.hud-label {
    font-size: 18px;
    color: white;
    margin: 10px 0;
    text-align: center;
}

/* 体力バーのスタイル */
.hud-progress-bar {
    width: 100%;
    height: 20px;
    background-color: grey;
    border-radius: 5px;
}
